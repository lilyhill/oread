{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "homer",
    "description": "A simple highlighter with data storing",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
         "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://*/*"]
    }]
}
